<h2 class="mb20">以下の内容で、ツイート</h2>
<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<%= form_for(@tweet) do |f| %>
  <%= f.hidden_field :content %>
  
  <p class="mb20"><%= @tweet.content %></p>
  <%= f.submit "ツイート", class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る", name: 'back', class: 'btn btn-warning btn-block mt30' %>
<% end %>
  </div>
<!-- /.container --></div>